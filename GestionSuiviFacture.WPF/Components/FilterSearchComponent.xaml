<UserControl
    x:Class="GestionSuiviFacture.WPF.Components.FilterSearchComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="LTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="auto" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5,0,0,0" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="240" />
        </Style>
        <Style x:Key="LTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SLTextBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5,0,0,0" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="100" />
        </Style>
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Border
         Padding="4"
         Background="Transparent"
         BorderBrush="Transparent"
         BorderThickness="0">
                <Path
             HorizontalAlignment="Right"
             VerticalAlignment="Center"
             Data="M 0 0 L 4 4 L 8 0 Z"
             Fill="Gray" />
            </Border>
        </ControlTemplate>
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Padding="4"
                                Background="White"
                                BorderBrush="#888"
                                BorderThickness="1"
                                CornerRadius="6">

                                <Grid>
                                    <ToggleButton
                                        Name="ToggleButton"
                                        Grid.Column="2"
                                        ClickMode="Press"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Template="{StaticResource ComboBoxToggleButtonTemplate}" />
                                    <ContentPresenter
                                        Name="ContentSite"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        IsHitTestVisible="False" />
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Width="260" Margin="20,20,10,0">
        <StackPanel Margin="0,0,0,30" Orientation="Horizontal">
            <TextBlock
                Width="180"
                Height="30"
                FontSize="20"
                FontWeight="SemiBold"
                Text="Consultation" />
            <Button
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding LoadEtiquettesFilterCommand}"
                IsDefault="True">
                <Image Width="60" Source="/Images/SearchButton.png" />
            </Button>
        </StackPanel>

        <Grid Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,5"
                Style="{StaticResource LTextBlock}"
                Text="Date Debut" />
            <DatePicker
                Grid.Row="1"
                Grid.Column="0"
                Height="30"
                VerticalAlignment="Top"
                SelectedDate="{Binding DebutDateFilter, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="40,0,0,5"
                Style="{StaticResource LTextBlock}"
                Text="Date Fin" />
            <DatePicker
                Grid.Row="1"
                Grid.Column="1"
                Height="30"
                Margin="40,0,0,0"
                VerticalAlignment="Top"
                SelectedDate="{Binding FinDateFilter, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBlock}"
            Text="Numero Sequence" />
        <TextBox
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBox}"
            Text="{Binding NumSequenceFilter, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBlock}"
            Text="Numero Commande" />
        <TextBox
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBox}"
            Text="{Binding NumCommandeFilter, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBlock}"
            Text="C.N.U.F" />
        <TextBox
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBox}"
            Text="{Binding CnufFilter, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource LTextBlock}"
            Text="Status" />
        <ComboBox
            Width="240"
            Height="30"
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ItemsSource="{Binding StatusOptions}"
            SelectedItem="{Binding StatusFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource RoundedComboBox}"
            Text="TOUT" />
        <TextBlock
            Margin="0,0,0,5"
            Style="{StaticResource LTextBlock}"
            Text="Type Facture" />
        <StackPanel Orientation="Horizontal">
            <ToggleButton
                Width="100"
                Height="30"
                Margin="0,0,40,0"
                Content="Normal" />
            <ToggleButton
                Width="100"
                Height="30"
                Content="Emballage" />
        </StackPanel>
    </StackPanel>
</UserControl>
