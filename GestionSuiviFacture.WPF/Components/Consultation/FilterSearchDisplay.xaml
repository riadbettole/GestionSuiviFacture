<UserControl
    x:Class="GestionSuiviFacture.WPF.Components.Consultation.FilterSearchDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Components.Consultation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="LTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="auto" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5,0,30,0" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="240" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <Grid>
                                <!--  Text content host  -->
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Padding="{TemplateBinding Padding}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Background="Transparent"
                                    Focusable="False"
                                    HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Hidden" />

                                <!--  Search icon  -->
                                <Image
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Panel.ZIndex="1"
                                    IsHitTestVisible="False"
                                    Source="/Images/SearchBlue.png" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F0F0F0" />
                    <Setter Property="Foreground" Value="#888888" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LDatePicker" TargetType="DatePicker">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border
                            BorderBrush="#ABADB3"
                            BorderThickness="1"
                            CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox
                                    x:Name="PART_TextBox"
                                    Grid.Column="0"
                                    Padding="5,0,0,0"
                                    VerticalContentAlignment="Center"
                                    BorderThickness="0"
                                    FontStyle="Italic"
                                    Text="Chosir Date" />
                                <Button
                                    x:Name="PART_Button"
                                    Grid.Column="1"
                                    Width="25"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Focusable="False">
                                    <Image
                                        Width="16"
                                        Height="16"
                                        Source="/Images/Calendar.png" />
                                </Button>
                                <Popup
                                    x:Name="PART_Popup"
                                    AllowsTransparency="True"
                                    Focusable="False"
                                    Placement="Bottom"
                                    StaysOpen="False">
                                    <Border
                                        Background="White"
                                        BorderBrush="#ABADB3"
                                        BorderThickness="1"
                                        CornerRadius="0 0 3 3">
                                        <Calendar x:Name="PART_Calendar" BorderThickness="0" />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LTextBlock" TargetType="TextBlock">


            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>




        <Style x:Key="SLTextBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5,0,0,0" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="100" />
        </Style>

        <!--  Fixed ComboBox style to show dropdown  -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Padding="4"
                                Background="#E9EEFF"
                                BorderBrush="#888"
                                BorderThickness="1"
                                CornerRadius="6">
                                <Grid>
                                    <ToggleButton
                                        Name="ToggleButton"
                                        Grid.Column="2"
                                        ClickMode="Press"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" BorderBrush="Transparent">
                                                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                        <Path
                                                            x:Name="arrow"
                                                            Margin="0,0,8,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                                            Fill="Gray" />
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter
                                        Name="ContentSite"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        IsHitTestVisible="False" />
                                    <Popup
                                        Name="Popup"
                                        AllowsTransparency="True"
                                        Focusable="False"
                                        IsOpen="{TemplateBinding IsDropDownOpen}"
                                        Placement="Bottom"
                                        PopupAnimation="Slide">
                                        <Grid
                                            Name="DropDown"
                                            MinWidth="{TemplateBinding ActualWidth}"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                            SnapsToDevicePixels="True">
                                            <Border
                                                x:Name="DropDownBorder"
                                                Background="White"
                                                BorderBrush="#888"
                                                BorderThickness="1"
                                                CornerRadius="0 0 6 6" />
                                            <ScrollViewer Margin="4,6,4,6">
                                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                            </ScrollViewer>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  New style for toggle buttons with mutual exclusivity  -->
        <Style x:Key="CustomToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#787CF5" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="Black" />
                                <Setter Property="BorderThickness" Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border
        Margin="20,0,10,0"
        Padding="20"
        VerticalAlignment="Center">
        <StackPanel>
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    Style="{StaticResource LTextBlock}"
                    Text="Date Début" />
                <DatePicker
                    Grid.Row="1"
                    Grid.Column="0"
                    DisplayDateEnd="{Binding Filters.FinDateFilter, UpdateSourceTrigger=PropertyChanged}"
                    SelectedDate="{Binding Filters.DebutDateFilter, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource LDatePicker}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="40,0,0,5"
                    Style="{StaticResource LTextBlock}"
                    Text="Date Fin" />
                <DatePicker
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="40,0,0,0"
                    DisplayDateStart="{Binding Filters.DebutDateFilter, UpdateSourceTrigger=PropertyChanged}"
                    SelectedDate="{Binding Filters.FinDateFilter, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource LDatePicker}" />
            </Grid>
            <TextBlock
                Margin="0,20,0,0"
                Style="{StaticResource LTextBlock}"
                Text="Numéro Séquence" />
            <TextBox
                IsEnabled="{Binding Filters.FieldStates.IsNumSequenceEnabled}"
                Style="{StaticResource LTextBox}"
                Text="{Binding Filters.NumSequenceFilter, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0"
                Style="{StaticResource LTextBlock}"
                Text="Numéro Commande" />
            <TextBox
                IsEnabled="{Binding Filters.FieldStates.IsNumCommandeEnabled}"
                Style="{StaticResource LTextBox}"
                Text="{Binding Filters.NumCommandeFilter, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0"
                Style="{StaticResource LTextBlock}"
                Text="CNUF" />
            <TextBox
                IsEnabled="{Binding Filters.FieldStates.IsCnufEnabled}"
                Style="{StaticResource LTextBox}"
                Text="{Binding Filters.CnufFilter, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0,20,0,0"
                Style="{StaticResource LTextBlock}"
                Text="Status" />
            <ComboBox
                Width="240"
                Height="30"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding Filters.StatusOptions}"
                SelectedItem="{Binding Filters.StatusFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource RoundedComboBox}"
                Text="TOUT" />
            <TextBlock Style="{StaticResource LTextBlock}" Text="Type Facture" />
            <StackPanel Margin="0" Orientation="Horizontal">
                <ToggleButton
                    Width="100"
                    Height="30"
                    Margin="0,0,40,0"
                    Content="Normal"
                    IsChecked="{Binding Filters.IsNormalFactureType, Mode=TwoWay}"
                    Style="{StaticResource CustomToggleButton}" />
                <ToggleButton
                    Width="100"
                    Height="30"
                    Content="Emballage"
                    IsChecked="{Binding Filters.IsEmballageFactureType, Mode=TwoWay}"
                    Style="{StaticResource CustomToggleButton}" />
            </StackPanel>
            <Button
                Height="45"
                Margin="0,35,0,0"
                Background="#353535"
                BorderThickness="0"
                Command="{Binding LoadEtiquettesFilterClickedCommand}"
                Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#A5A5A5" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E5E5E5" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="Rechercher" />
                </StackPanel>
            </Button>



        </StackPanel>
    </Border>
</UserControl>

