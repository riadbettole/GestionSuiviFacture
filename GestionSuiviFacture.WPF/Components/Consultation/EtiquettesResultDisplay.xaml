<UserControl
    x:Class="GestionSuiviFacture.WPF.Components.Consultation.EtiquettesResultDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:GestionSuiviFacture.WPF.Components.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Components.Consultation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ArrowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Padding" Value="10,0,10,0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Height" Value="30" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
        </Style>

        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Foreground" Value="#484CC5" />
            <Setter Property="Margin" Value="0,10,0,10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListView
            Grid.Row="0"
            BorderBrush="#f0f0f0"
            BorderThickness="0,0,0,1"
            ItemsSource="{Binding Etiquettes}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Sequence">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="#484CC5" Text="{Binding NumSequence}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Fournisseur">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Fournisseur}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Date Traitement">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DateTraitement}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Statut">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <common:StatutDisplay
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    DisplayFontSize="12"
                                    DisplayHeight="20"
                                    DisplayWidth="50"
                                    Status="{Binding Status}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Utilisateur">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Utilisateur}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1" Margin="0,7,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.8*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Border
                    Width="32"
                    Padding="12,8,12,08"
                    VerticalAlignment="Center"
                    Background="#C5C7FF">
                    <TextBlock FontWeight="Bold" Text="{Binding Pagination.EndPosition}" />
                </Border>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text=" de  " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="{Binding Pagination.TotalCount}" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Margin="0,-5,0,0"
                Orientation="Horizontal">
                <Button
                    Command="{Binding Pagination.GoToFirstPageCommand}"
                    Content="&lt;&lt;"
                    IsEnabled="{Binding Pagination.HasPreviousPage}"
                    Style="{StaticResource ArrowButton}" />
                <Button
                    Command="{Binding Pagination.GoToPreviousPageCommand}"
                    Content="&lt;"
                    IsEnabled="{Binding Pagination.HasPreviousPage}"
                    Style="{StaticResource ArrowButton}" />
                <Button
                    Command="{Binding Pagination.GoToNextPageCommand}"
                    Content="&gt;"
                    IsEnabled="{Binding Pagination.HasNextPage}"
                    Style="{StaticResource ArrowButton}" />
                <Button
                    Command="{Binding Pagination.GoToLastPageCommand}"
                    Content="&gt;&gt;"
                    IsEnabled="{Binding Pagination.HasNextPage}"
                    Style="{StaticResource ArrowButton}" />

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
