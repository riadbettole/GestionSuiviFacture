<UserControl
    x:Class="GestionSuiviFacture.WPF.Components.LayoutPageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    mc:Ignorable="d">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Button
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding Command, ElementName=root}">
                <Grid Margin="5,5,5,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="{Binding Image, ElementName=root}" />
                    <TextBlock
                        Grid.Row="1"
                        Width="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding Header, ElementName=root}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>
            </Button>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>