<UserControl
    x:Class="GestionSuiviFacture.WPF.Components.SaisisInfoFactureDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="SmallHeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#545454" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="InputFacture" TargetType="TextBox">
            <Setter Property="Height" Value="22" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="BorderBrush" Value="#353535" />
            <Setter Property="Width" Value="200" />
        </Style>

        <Style x:Key="CardTotal" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Width" Value="105" />
            <Setter Property="Padding" Value="10" />
        </Style>

    </UserControl.Resources>
    <StackPanel Grid.Column="2" Margin="20,0,20,0">
        <TextBlock
            Margin="-5,0,0,10"
            Style="{StaticResource HeaderText}"
            Text="Details facture" />
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource SmallHeaderText}"
                Text="N de la facture" />
            <TextBox
                x:Name="NumFactureTextBox"
                Grid.Row="1"
                Grid.Column="0"
                KeyDown="NumFactureInputBox_KeyDown"
                Style="{StaticResource InputFacture}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Height="12"
                VerticalAlignment="Top"
                Style="{StaticResource SmallHeaderText}"
                Text="Montant TTC Facture" />
            <TextBox
                x:Name="MontantTTCTextBox"
                Grid.Row="1"
                Grid.Column="2"
                KeyDown="MontantTTCInputBox_KeyDown"
                Style="{StaticResource InputFacture}" />
        </Grid>
        <TextBlock
            Margin="-5,20,0,10"
            FontSize="11"
            FontWeight="SemiBold"
            Foreground="#2653B4"
            Text="Details TVA" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource SmallHeaderText}"
                Text="Taux (%)" />
            <TextBox
                x:Name="TauxTextBox"
                Grid.Row="1"
                Grid.Column="0"
                KeyDown="TauxInputBox_KeyDown"
                Style="{StaticResource InputFacture}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource SmallHeaderText}"
                Text="MNT HT" />
            <TextBox
                x:Name="MntHTTextBox"
                Grid.Row="1"
                Grid.Column="2"
                KeyDown="MntHTInputBox_KeyDown"
                Style="{StaticResource InputFacture}" />
            <Button
                x:Name="AddButton"
                Grid.Row="1"
                Grid.Column="3"
                Width="25"
                Margin="0,0,0,-2"
                Background="#484CC5"
                Content="+"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Border
            Margin="0,20,0,0"
            Background="#F5F5F5"
            CornerRadius="8">
            <ListView
                Height="110"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding TaxDetails}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Height" Value="20" />
                        <Setter Property="Margin" Value="-50,0,0,0" />
                        <Setter Property="FontSize" Value="11" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Foreground" Value="#1A237E" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0,10,50,10" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="FontSize" Value="11" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="HorizontalContentAlignment" Value="Right" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Width="125" Header="Taux (%)">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TauxPercentage}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="125" Header="Montant HT">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MontantHT}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="125" Header="Montant TVA">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MontantTVA}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Grid Width="380" Margin="-10,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource CardTotal}">
                <StackPanel>
                    <TextBlock>Total TVA</TextBlock>
                    <TextBlock>575.32 DH</TextBlock>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource CardTotal}">
                <StackPanel>
                    <TextBlock Text="Total HT" />
                    <TextBlock Text="2,949.80 DH" />
                </StackPanel>
            </Border>
            <Border
                Grid.Column="2"
                Background="#484CC5"
                Style="{StaticResource CardTotal}">
                <StackPanel>
                    <TextBlock Foreground="White" Text="Total TTC" />
                    <TextBlock Foreground="White" Text="3525.12 DH" />
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>

</UserControl>
