<UserControl x:Class="GestionSuiviFacture.WPF.Components.ModernNavButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Converters"
             x:Name="root">

    <UserControl.Resources>
        <local:StringEqualsConverter x:Key="StringEqualsConverter" />
    </UserControl.Resources>

    <Button Height="60"
            Padding="15,10"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding Command, ElementName=root}"
            Cursor="Hand">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#34495E" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#2C3E50" />
                                </Trigger>

                                <!-- Trigger for IsSelected -->
                                <DataTrigger Binding="{Binding IsSelected, ElementName=root}" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#333498DB " />
                                    <!-- Selected color -->
                                    <!--<Setter TargetName="border" Property="Foreground" Value="White" />-->
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Button.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Border Grid.Column="0"
                    Width="35"
                    Height="35"
                    Margin="0,0,12,0"
                    Background="#FFFFFF"
                    CornerRadius="8">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="{Binding Icon, ElementName=root}" />
            </Border>

            <!-- Text Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock FontSize="14"
                           FontWeight="Medium"
                           Foreground="White"
                           Text="{Binding Header, ElementName=root}" />
                <TextBlock Margin="0,2,0,0"
                           FontSize="11"
                           Foreground="#BDC3C7"
                           Text="{Binding Description, ElementName=root}" />
            </StackPanel>
        </Grid>
    </Button>
</UserControl>
