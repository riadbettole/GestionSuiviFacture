<Window
    x:Class="GestionSuiviFacture.WPF.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="470"
    d:DesignWidth="800"
    Background="Transparent"
    BorderBrush="Transparent"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="InputBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="70" />
            <Setter Property="Width" Value="365" />
        </Style>

        <Style x:Key="ButtonBox" TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="28" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Background" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Width" Value="300" />
        </Style>
    </Window.Resources>
    <Border Background="White" CornerRadius="30 90 90 30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/Images/MJlogo.png" />
            <Grid Grid.Column="1">
                <Border Background="#353535" CornerRadius="90" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        FontSize="35"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Connexion"
                        TextAlignment="Center" />

                    <TextBox Grid.Row="1" Style="{StaticResource InputBox}" />
                    <TextBox Grid.Row="2" Style="{StaticResource InputBox}" />
                    <Button
                        Grid.Row="3"
                        Content="Se connecter"
                        Style="{StaticResource ButtonBox}" />
                </Grid>
            </Grid>
        </Grid>

    </Border>
</Window>
