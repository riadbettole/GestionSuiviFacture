<Window
    x:Class="GestionSuiviFacture.WPF.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:GestionSuiviFacture.WPF.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="700"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="Transparent"
    Icon="/Images/GroupMarjaneWhite.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="InputBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>

            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="58" />
            <Setter Property="Width" Value="340" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Padding" Value="25,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <TextBox
                                    x:Name="textSource"
                                    Padding="{TemplateBinding Padding}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="{TemplateBinding FontSize}"
                                    Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock
                                    Padding="{TemplateBinding Padding}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="{TemplateBinding Tag}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=textSource}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PassBox" TargetType="{x:Type PasswordBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>

            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="58" />
            <Setter Property="Width" Value="340" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Padding" Value="25,0,0,0" />
            <Setter Property="behaviors:PasswordBoxHelper.PlaceholderText" Value="{Binding Tag, RelativeSource={RelativeSource Self}}" />
            <Setter Property="behaviors:PasswordBoxHelper.IsAttached" Value="True" />
        </Style>

        <Style x:Key="ButtonBox" TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="28" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Height" Value="55" />
            <Setter Property="Width" Value="300" />
        </Style>
    </Window.Resources>
    <Border
        Background="White"
        BorderBrush="Black"
        BorderThickness="0.5,0.5,0,0.5"
        CornerRadius="30 90 90 30"
        MouseLeftButtonDown="DragBar_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Margin="20,10,00,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Orientation="Horizontal">

                <Button
                    Name="CloseButton"
                    Width="25"
                    Height="25"
                    Background="#555"
                    BorderBrush="#666"
                    BorderThickness="1"
                    Click="CloseButton_Click"
                    Content="×"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#DC4545" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#B53030" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Image
                Grid.Column="0"
                Width="250"
                Margin="0,-45,0,0"
                Source="/Images/MJlogo.png" />
            <Grid Grid.Column="1">
                <Border Background="#353535" CornerRadius="0 90 90 90" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,40,0,0"
                            VerticalAlignment="Center"
                            FontSize="30"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Connexion"
                            TextAlignment="Center" />
                        <!--  Error message display  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#FFDC4545"
                            Text="{Binding ErrorMessage}"
                            Visibility="Visible" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="0,-5,0,0">
                        <TextBox
                            x:Name="UsernameTextBox"
                            Grid.Row="1"
                            Margin="0,0,0,15"
                            KeyDown="UsernameTextBox_KeyDown"
                            Loaded="UsernameTextBox_Loaded"
                            Style="{StaticResource InputBox}"
                            Tag="Nom d'utilisateur"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                        <PasswordBox
                            x:Name="PasswordInputBox"
                            Grid.Row="2"
                            KeyDown="PasswordInputBox_KeyDown"
                            Style="{StaticResource PassBox}"
                            Tag="Mot de passe" />


                    </StackPanel>
                    <Button
                        Grid.Row="2"
                        Margin="0,0,0,25"
                        VerticalAlignment="Center"
                        Command="{Binding LoginCommand}"
                        Content="Se connecter"
                        Style="{StaticResource ButtonBox}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>