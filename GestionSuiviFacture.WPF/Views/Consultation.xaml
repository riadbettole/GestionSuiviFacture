<Window
    x:Class="GestionSuiviFacture.WPF.Views.Consultation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Consultation"
    Width="960"
    Height="560"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="auto" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5 0 0 0"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="240"/>
        </Style>
        <Style x:Key="LTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SLTextBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5 0 0 0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Border Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Padding="4">
                <Path
            Fill="Gray"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Data="M 0 0 L 4 4 L 8 0 Z" />
            </Border>
        </ControlTemplate>
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                        x:Name="Border"
                        Background="White"
                        BorderBrush="#888"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="4">
                                <Grid>
                                    <ToggleButton
                                Name="ToggleButton"
                                Grid.Column="2"
                                Template="{StaticResource ComboBoxToggleButtonTemplate}"
                                Focusable="False"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press" />
                                    <ContentPresenter
                                Name="ContentSite"
                                IsHitTestVisible="False"
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left" />
                                </Grid>
                            </Border>
                            <Popup
                        Name="Popup"
                        Placement="Bottom"
                        IsOpen="{TemplateBinding IsDropDownOpen}"
                        AllowsTransparency="True"
                        Focusable="False"
                        PopupAnimation="Slide">
                                <Border
                            x:Name="DropDownBorder"
                            Background="White"
                            BorderBrush="#888"
                            BorderThickness="1"
                            CornerRadius="6">
                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <components:PageLayout Header="Consultation">
        <Canvas Width="900">
            <Line
        X1="286" Y1="-15"
        X2="286" Y2="592"
        Stroke="Gray"
        StrokeThickness="1"
        StrokeDashArray="8 8"
        SnapsToDevicePixels="True" HorizontalAlignment="Center" Height="497" Canvas.Top="39" VerticalAlignment="Top"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="560" VerticalAlignment="Center" Width="890">


                <StackPanel Width="260" Margin="20,20,10,0">
                    <StackPanel Margin="0,0,0,30" Orientation="Horizontal">
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Consultation" 
                            Width="180" Height="30"/>
                        <Image Source="/Images/SearchButton.png" Width="60"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,5"
                            Style="{StaticResource LTextBlock}"
                            Text="Date Debut" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Top"
                            Style="{StaticResource SLTextBox}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="40,0,0,5"
                            Style="{StaticResource LTextBlock}"
                            Text="Date Fin" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="40,0,0,0"
                            Style="{StaticResource SLTextBox}" />
                    </Grid>
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Numero Sequence" />
                    <TextBox
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Numero Commande" />
                    <TextBox
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="C.N.U.F" />
                    <TextBox
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Status" />
                    <ComboBox
                        Width="240"
                        Height="30"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" 
                        Style="{StaticResource RoundedComboBox}"
                        >
                        <ComboBoxItem Content="STATUS OK" />
                        <ComboBoxItem Content="STATUS NOK" />
                        <ComboBoxItem Content="STATUS ANNULE" />
                        <ComboBoxItem Content="TOUT" />
                    </ComboBox>
                    <TextBlock
                        Margin="0,0,0,5"
                        Style="{StaticResource LTextBlock}"
                        Text="Type Facture" />
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Width="100"
                            Height="30"
                            Margin="0,0,40,0"
                            Content="Normal" />
                        <Button
                            Width="100"
                            Height="30"
                            Content="Emballage" />
                    </StackPanel>
                </StackPanel>
                
                <Canvas>
                    <Image Source="/Images/Excel.png" Width="40" Canvas.Left="520" Canvas.Top="30"/>
                    <StackPanel Width="590" Margin="20,34,10,0" Height="517">

                        <TextBlock Text="Resultats" 
                               FontSize="20"
                               Margin="0 0 0 10"
                               FontWeight="SemiBold"/>
                        <ListView
                    BorderBrush="Transparent"
                    ItemsSource="{Binding Etiquettes}"
                    BorderThickness="0"
                    SelectionChanged="ListView_SelectionChanged">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                    <Setter Property="BorderThickness" Value="0,1,0,0"/>
                                    <Setter Property="Height" Value="40" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="Foreground" Value="Black" />

                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="Foreground" Value="#484CC5"/>
                                            <Setter Property="Margin" Value="0 10 0 10"/>
                                            <Setter Property="FontSize" Value="13" />

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                        <Border Padding="5,5,5,5">
                                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>

                                    <GridViewColumn Header="Sequence" Width="125">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NumSequence}" Foreground="#484CC5" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Fournisseur" Width="125">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Fournisseur}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Date Traitement" Width="125">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DateTraitement}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Statut" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="5" Margin="2" Padding="4" VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="{x:Type Border}">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="OK">
                                                                    <Setter Property="Background" Value="LightGreen"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="NOK">
                                                                    <Setter Property="Background" Value="Salmon"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="ANNULE">
                                                                    <Setter Property="Background" Value="Yellow"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Status}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Width="50"
                                                   TextAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Utilisateur" Width="100" >
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Utilisateur}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Canvas>
            </StackPanel>
        </Canvas>
    </components:PageLayout>
</Window>
