<Window
    x:Class="GestionSuiviFacture.WPF.Views.Consultation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Consultation"
    Width="960"
    Height="560"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="LTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="auto" />
        </Style>
        <Style x:Key="LTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="SLTextBox" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <components:PageLayout Header="Consultation">
        <StackPanel Orientation="Horizontal">
            <Rectangle
                Height="11"
                SnapsToDevicePixels="True"
                Stroke="#FF000000"
                StrokeDashArray="4 4"
                StrokeThickness="1" Width="100" />
            <Border BorderBrush="Black" BorderThickness="0,0,3,0">
                <StackPanel Width="260" Margin="20,40,10,0">
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Consultation" />
                    </StackPanel>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,5"
                            Style="{StaticResource LTextBlock}"
                            Text="Date Debut" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="100"
                            Height="30"
                            VerticalAlignment="Top"
                            Style="{StaticResource SLTextBox}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="40,0,0,5"
                            Style="{StaticResource LTextBlock}"
                            Text="Date Fin" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            Margin="40,0,0,0"
                            Style="{StaticResource SLTextBox}" />
                    </Grid>
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Numero Sequence" />
                    <TextBox
                        Width="240"
                        Height="30"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Numero Commande" />
                    <TextBox
                        Width="240"
                        Height="30"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="C.N.U.F" />
                    <TextBox
                        Width="240"
                        Height="30"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBox}" />
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource LTextBlock}"
                        Text="Status" />
                    <ComboBox
                        Width="240"
                        Height="30"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
                    <TextBlock
                        Margin="0,0,0,5"
                        Style="{StaticResource LTextBlock}"
                        Text="Type Facture" />
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Width="100"
                            Height="30"
                            Margin="0,0,40,0"
                            Content="Normal" />
                        <Button
                            Width="100"
                            Height="30"
                            Content="Emballage" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleY="0.09" />
                        <RotateTransform />
                        <TranslateTransform Y="0.598" />
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <TextBlock Text="Resultats" />
                <ListView
                    BorderBrush="Transparent"
                    ItemsSource="{Binding Etiquettes}"
                    SelectionChanged="ListView_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Padding" Value="5,5,5,5" />
                                    <Setter Property="IsHitTestVisible" Value="False" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                <Border Padding="5,5,5,5">
                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>

                            <GridViewColumn Header="Sequence">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NumSequence}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Fournisseur">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Fournisseur}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Date Traitement">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DateTraitement}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Statut">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Utilisateur">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Utilisateur}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </StackPanel>
    </components:PageLayout>
</Window>
