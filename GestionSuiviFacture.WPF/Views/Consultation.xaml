<UserControl
    x:Class="GestionSuiviFacture.WPF.Views.Consultation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:i1="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Canvas Width="900">
            <Line
                Canvas.Top="39"
                Height="497"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                SnapsToDevicePixels="True"
                Stroke="Gray"
                StrokeDashArray="8 8"
                StrokeThickness="1"
                X1="286"
                X2="286"
                Y1="-15"
                Y2="592" />

            <StackPanel
                Width="890"
                Height="560"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <components:FilterSearchComponent />
                <Grid
                    Width="590"
                    Height="517"
                    Margin="20,34,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Resultats" />
                        <Image
                            Grid.Column="1"
                            Width="40"
                            Source="/Images/Excel.png" />
                    </Grid>
                    <components:EtiquettesSearchDisplay Grid.Row="1" Margin="0,10,0,0" />
                </Grid>
            </StackPanel>
        </Canvas>
        <Grid x:Name="PopupOverlay" Visibility="{Binding IsPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Rectangle
                Height="560"
                Fill="Black"
                Opacity="0.5" />
            <components:DetailsFacture />
        </Grid>
    </Grid>
</UserControl>
