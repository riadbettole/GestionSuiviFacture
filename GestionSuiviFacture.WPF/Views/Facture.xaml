<UserControl
    x:Class="GestionSuiviFacture.WPF.Views.Facture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:GestionSuiviFacture.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionSuiviFacture.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="SmallHeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#545454" />
            <Setter Property="FontSize" Value="9" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="TitleInfo" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#272727" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,20,0,0" />
        </Style>
        <Style x:Key="ContentInfo" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#272727" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Margin" Value="0,2,0,0" />
        </Style>
        <Style x:Key="ImportantInfo" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF0000" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="200" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="InputSearch" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="Margin" Value="0,5,30,0" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="BorderBrush" Value="#353535" />
        </Style>

        <Style x:Key="InputFacture" TargetType="TextBox">
            <Setter Property="Height" Value="22" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="BorderBrush" Value="#353535" />
            <Setter Property="Width" Value="200" />
        </Style>

        <Style x:Key="CardTotal" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Width" Value="105" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style x:Key="ButtonSubmit" TargetType="Button">
            <Setter Property="Background" Value="#353535" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Date : " />
                    <TextBox
                        x:Name="DateTextBox"
                        Grid.Row="1"
                        Grid.Column="0"
                        KeyDown="DateInputBox_KeyDown"
                        Loaded="DateTextBox_Loaded"
                        Style="{StaticResource InputSearch}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Site : " />
                    <TextBox
                        x:Name="SiteTextBox"
                        Grid.Row="1"
                        Grid.Column="1"
                        KeyDown="SiteInputBox_KeyDown"
                        Style="{StaticResource InputSearch}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Text="N de commande : " />
                    <TextBox
                        x:Name="CommandeTextBox"
                        Grid.Row="1"
                        Grid.Column="2"
                        KeyDown="NumCommandeInputBox_KeyDown"
                        Style="{StaticResource InputSearch}" />
                    <Button
                        x:Name="SearchButton"
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="80"
                        Command="{Binding FindCommandeCommand}"
                        Content="Rechercher"
                        Style="{StaticResource ButtonSubmit}" />
                </Grid>
                <TextBlock
                    Margin="20,0,20,20"
                    Style="{StaticResource ImportantInfo}"
                    Text="Site : Marjane Hay Riad" />
            </StackPanel>
        </Grid>
        <Line
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            SnapsToDevicePixels="True"
            Stroke="Gray"
            StrokeDashArray="8 8"
            StrokeThickness="1"
            X1="0"
            X2="940" />
        <Grid Grid.Row="2" Margin="0,30,0,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="20,0,20,0">
                <TextBlock Style="{StaticResource HeaderText}" Text="Informations du fournisseur : " />
                <TextBlock
                    Margin="0,20,0,10"
                    Style="{StaticResource ImportantInfo}"
                    Text="{Binding Commande.NomFournisseur}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource TitleInfo}"
                        Text="CNUF" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource ContentInfo}"
                        Text="{Binding Commande.CNUF}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource TitleInfo}"
                        Text="Rayon" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource ContentInfo}"
                        Text="{Binding Commande.Rayon}" />
                </Grid>
                <StackPanel>
                    <TextBlock Style="{StaticResource TitleInfo}" Text="Montant TTC BRV" />
                    <TextBlock Style="{StaticResource ContentInfo}" Text="{Binding Commande.MontantTTC}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Style="{StaticResource TitleInfo}" Text="Date de Commande" />
                    <TextBlock Style="{StaticResource ContentInfo}" Text="{Binding Commande.DateCommande}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Style="{StaticResource TitleInfo}" Text="Date de reception" />
                    <TextBlock Style="{StaticResource ContentInfo}" Text="{Binding Commande.DateReception}" />

                </StackPanel>
            </StackPanel>
            <Line
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                SnapsToDevicePixels="True"
                Stroke="Gray"
                StrokeDashArray="8 8"
                StrokeThickness="1"
                Y1="-15"
                Y2="400" />
            <StackPanel Grid.Column="2" Margin="20,0,20,0">
                <TextBlock
                    Margin="-5,0,0,10"
                    Style="{StaticResource HeaderText}"
                    Text="Details facture" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SmallHeaderText}"
                        Text="N de la facture" />
                    <TextBox
                        x:Name="NumFactureTextBox"
                        Grid.Row="1"
                        Grid.Column="0"
                        KeyDown="NumFactureInputBox_KeyDown"
                        Style="{StaticResource InputFacture}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Style="{StaticResource SmallHeaderText}"
                        Text="Montant TTC Facture" />
                    <TextBox
                        x:Name="MontantTTCTextBox"
                        Grid.Row="1"
                        Grid.Column="2"
                        KeyDown="MontantTTCInputBox_KeyDown"
                        Style="{StaticResource InputFacture}" />
                </Grid>
                <TextBlock
                    Margin="-5,20,0,10"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#2653B4"
                    Text="Details TVA" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SmallHeaderText}"
                        Text="Taux (%)" />
                    <TextBox
                        x:Name="TauxTextBox"
                        Grid.Row="1"
                        Grid.Column="0"
                        KeyDown="TauxInputBox_KeyDown"
                        Style="{StaticResource InputFacture}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Style="{StaticResource SmallHeaderText}"
                        Text="MNT HT" />
                    <TextBox
                        x:Name="MntHTTextBox"
                        Grid.Row="1"
                        Grid.Column="2"
                        KeyDown="MntHTInputBox_KeyDown"
                        Style="{StaticResource InputFacture}" />
                    <Button
                        x:Name="AddButton"
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="25"
                        Margin="0,0,0,-2"
                        Background="#484CC5"
                        Content="+"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="3" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
                <Border
                    Margin="0,20,0,0"
                    Background="#F5F5F5"
                    CornerRadius="8">
                    <ListView
                        Height="110"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding TaxDetails}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Right" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Height" Value="20" />
                                <Setter Property="Margin" Value="-50,0,0,0" />
                                <Setter Property="FontSize" Value="10" />
                                <Setter Property="Foreground" Value="Black" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Foreground" Value="#1A237E" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Margin" Value="0,10,50,10" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="FontSize" Value="10" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Width="125" Header="Taux (%)">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TauxPercentage}" TextAlignment="Right" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="125" Header="Montant HT">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding MontantHT}" TextAlignment="Right" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="125" Header="Montant TVA">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding MontantTVA}" TextAlignment="Right" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
                <Grid Width="380" Margin="-10,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Style="{StaticResource CardTotal}">
                        <StackPanel>
                            <TextBlock>Total TVA</TextBlock>
                            <TextBlock>575.32 DH</TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Style="{StaticResource CardTotal}">
                        <StackPanel>
                            <TextBlock Text="Total HT" />
                            <TextBlock Text="2,949.80 DH" />
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Column="2"
                        Background="#484CC5"
                        Style="{StaticResource CardTotal}">
                        <StackPanel>
                            <TextBlock Foreground="White" Text="Total TTC" />
                            <TextBlock Foreground="White" Text="3525.12 DH" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
            <Line
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                SnapsToDevicePixels="True"
                Stroke="Gray"
                StrokeDashArray="8 8"
                StrokeThickness="1"
                Y1="-15"
                Y2="400" />
            <StackPanel Grid.Column="4" Margin="20,0,20,0">
                <TextBlock Style="{StaticResource HeaderText}" Text="Bon de livraisons " />

                <Border
                    Margin="0,15,0,0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="8">
                    <ListView
                        Height="180"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding BonDeLivraisons}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                                <Setter Property="BorderBrush" Value="Gray" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Background" Value="Transparent" />

                                <Setter Property="FontSize" Value="10" />
                                <Setter Property="Foreground" Value="Black" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Margin" Value="0,10,0,10" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Header="N de livraison">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                FontWeight="SemiBold"
                                                Foreground="#484CC5"
                                                Text="{Binding NumDeLivraison}"
                                                TextAlignment="Center" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Montant TTC">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <TextBlock FontWeight="Bold" Text="{Binding MontantTTC}" />
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>


                <Grid Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Total BLs" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#1A237E"
                        Text="3" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Montant total" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#1A237E"
                        Text="7,486.00 DH" />
                </Grid>
                <Button
                    Width="170"
                    Height="50"
                    Margin="0,24,0,0"
                    Style="{StaticResource ButtonSubmit}">
                    <TextBlock Text="Enregistrer la facture" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
